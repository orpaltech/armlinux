+/plugin/;
+
+/ {
+	compatible = "allwinner,sun8i-h3";
+
+	fragment@0 {
+		target-path = "/soc/";
+		__overlay__ {
+			vna-aapi {
+				compatible = "orpaltech,aapi-160";
+				clocks = <&aapi_clk 0>, <&aapi_clk 1>;
+				clock-names = "clk0", "clk1";
+				intermediate-frequency = <10031>;
+				status = "okay";
+			};
+
