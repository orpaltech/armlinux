+			waveshare35_int: waveshare35@01 {
+				pins = "PA1";
+				function = "gpio_in";
+			};
+			waveshare35_rst: waveshare35@02 {
+                                pins = "PA2";
+                                function = "gpio_out";
+                        };
+			waveshare35_dc: waveshare35@27 {
+                                pins = "PC7";
+                                function = "gpio_out";
+                        };
