+
+	_INIT_CMD(0xBA,	0x51),
+
+	// Set POWER
+	_INIT_CMD(0xB1,	0x00,0x50,0x44,0xEA,0x8D,0x08,0x11,0x11,0x11,0x27,
+			0x2F,0x9A,0x1A,0x42,0x0B,0x6E,0xF1,0x00,0xE6),
+
+	// Set DISP
+	_INIT_CMD(0xB2,	0x00,0x00,0xFE,0x08,0x04,0x19,0x22,0x00,0xFF,0x08,
+			0x04,0x19,0x20),
+
+	// Set CYC
+	_INIT_CMD(0xB4,	0x80,0x08,0x00,0x32,0x10,0x03,0x32,0x13,0x70,0x32,
+			0x10,0x08,0x37,0x01,0x28,0x07,0x37,0x08,0x4C,0x20,
+			0x44,0x44,0x08,0x00,0x40,0x08,0x28,0x08,0x30,0x30,
+			0x04),
+
+	// Set GIP
+	_INIT_CMD(0xD5,	0x00,0x00,0x0A,0x00,0x01,0x05,0x00,0x03,0x00,0x88,
+			0x88,0x88,0x88,0x23,0x01,0x67,0x45,0x02,0x13,0x88,
+			0x88,0x88,0x88,0x88,0x88,0x88,0x88,0x88,0x88,0x54,
+			0x76,0x10,0x32,0x31,0x20,0x88,0x88,0x88,0x88,0x88,
+			0x88,0x00,0x00,0x00,0x00,0x00,0x00),
+
+	// Set GAMMA
+	_INIT_CMD(0xE0,	0x79,0x00,0x02,0x09,0x22,0x25,0x3F,0x2B,0x43,0x01,
+			0x0D,0x10,0x15,0x17,0x16,0x16,0x13,0x18,0x00,0x02,
+			0x09,0x22,0x25,0x3F,0x2B,0x43,0x01,0x0D,0x10,0x15,
+			0x17,0x16,0x16,0x13,0x18),
+
+	// Set PANEL
+	_INIT_CMD(0xCC, 0x02),
+
+	// Set VCOM
+	_INIT_CMD(0xB6,	0x00,0x8B,0x00,0x8B),
+
+	_INIT_CMD(0xDE,	0x05,0x70,0x04),
+
