+	.val_bits	= 8,
+	.cache_type	= REGCACHE_RBTREE,
+	.max_register	= 187,
+	.writeable_reg	= si5351_regmap_is_writeable,
+	.volatile_reg	= si5351_regmap_is_volatile,
+};
