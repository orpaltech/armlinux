From 15b6402137780498f0bd17a01e31943e19dc0f78 Mon Sep 17 00:00:00 2001
From: Sergey Suloev <ssuloev@orpaltech.com>
Date: Fri, 28 Dec 2018 15:06:31 +0300
Subject: [PATCH] sun8i-h3: Device tree updates for H3 SoC boards

---
 arch/arm/boot/dts/sun8i-h3-orangepi-pc.dts |  2 +-
 arch/arm/boot/dts/sun8i-h3.dtsi            | 20 ++++++++++++++++++++
 2 files changed, 21 insertions(+), 1 deletion(-)

diff --git a/arch/arm/boot/dts/sun8i-h3-orangepi-pc.dts b/arch/arm/boot/dts/sun8i-h3-orangepi-pc.dts
index 4624033..1b65a64 100644
--- a/arch/arm/boot/dts/sun8i-h3-orangepi-pc.dts
+++ b/arch/arm/boot/dts/sun8i-h3-orangepi-pc.dts
@@ -153,7 +153,7 @@
 &ir {
 	pinctrl-names = "default";
 	pinctrl-0 = <&ir_pins_a>;
-	status = "okay";
+	status = "disabled";
 };
 
 &mmc0 {
diff --git a/arch/arm/boot/dts/sun8i-h3.dtsi b/arch/arm/boot/dts/sun8i-h3.dtsi
index f009607..1c51fa3 100644
--- a/arch/arm/boot/dts/sun8i-h3.dtsi
+++ b/arch/arm/boot/dts/sun8i-h3.dtsi
@@ -215,4 +215,24 @@
 
 &pio {
 	compatible = "allwinner,sun8i-h3-pinctrl";
+
+	i2s0_pins_bclk: i2s0@0 {
+		pins = "PA19";
+		function = "i2s0";
+	};
+
+	i2s0_pins_lrck: i2s0@1 {
+		pins = "PA18";
+		function = "i2s0";
+	};
+
+	i2s0_pins_do0: i2s0@2 {
+		pins = "PA20";
+		function = "i2s0";
+	};
+
+	i2s0_pins_di: i2s0@3 {
+		pins = "PA21";
+		function = "i2s0";
+	};
 };
