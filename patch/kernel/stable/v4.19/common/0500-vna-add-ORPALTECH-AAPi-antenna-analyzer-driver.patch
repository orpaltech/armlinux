+static int orpal_aapi_set_clock(struct clk *clk, u32 rate)
+{
+	int ret;
+
+	ret = clk_round_rate(clk, rate);
+	if (ret < 0)
+		return ret;
+
+	/* A rounded rate value will be passed */
+	ret = clk_set_rate(clk, ret);
+
+	return ret;
+}
+
+u32 orpal_aapi_get_measure_freq(struct aapi_device *aapi)
+{
+	return clk_get_rate(aapi->clk0);
+}
+
+int orpal_aapi_set_measure_freq(struct aapi_device *aapi,
+				u32 measure_freq)
+{
+        u32 loc_osc_freq;
+        int ret;
+
+	if (IS_ERR_OR_NULL(aapi->clk0))
+		return -ENODEV;
+
+	ret = orpal_aapi_set_clock(aapi->clk0, measure_freq);
+	if (ret)
+		return ret;
+
+	loc_osc_freq = measure_freq + aapi->intermediate_freq;
+	// TODO: verify rates
+
+	ret = orpal_aapi_set_clock(aapi->clk1, loc_osc_freq);
+	if (ret)
+		return ret;
+
+	return 0;
+}
+
+u32 orpal_aapi_get_losc_freq(struct aapi_device *aapi)
+{
+	return clk_get_rate(aapi->clk1);
+}
+
+static void orpal_aapi_disable_clks(struct aapi_device *aapi)
+{
+	clk_disable_unprepare(aapi->clk0);
+	clk_disable_unprepare(aapi->clk1);
+}
+
+static int orpal_aapi_runtime_resume(struct device *dev)
+{
+	struct aapi_device *aapi = dev_get_drvdata(dev);
+	int ret;
+
+	dev_dbg(dev, "%s: device resume\n",  __func__);
+
+	ret = clk_prepare_enable(aapi->clk0);
+	if (ret) {
+		dev_err(dev, "failed to enable clk0\n");
+		return ret;
+	}
+
+	ret = clk_prepare_enable(aapi->clk1);
+	if (ret) {
+		dev_err(dev, "failed to enable clk1\n");
+		goto err_rel_clk;
+	}
+
+	if (aapi->initial_freq) {
+		ret = orpal_aapi_set_measure_freq(aapi, aapi->initial_freq);
+		if (ret)
+			goto err_rel_clk;
+	}
+
+	return 0;
+
+err_rel_clk:
+	orpal_aapi_disable_clks(aapi);
+
+	return ret;
+}
+
+static int orpal_aapi_runtime_suspend(struct device *dev)
+{
+	struct aapi_device *aapi = dev_get_drvdata(dev);
+
+	dev_dbg(dev, "%s: device suspend\n",  __func__);
+
+	orpal_aapi_disable_clks(aapi);
+
+        return 0;
+}
