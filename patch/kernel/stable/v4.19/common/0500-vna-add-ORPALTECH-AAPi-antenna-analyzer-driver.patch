+static void orpal_aapi_free_gpio(struct aapi_device *aapi)
+{
+	if (!IS_ERR_OR_NULL(aapi->shdn_ctrl.gpio)) {
+		gpiod_put(aapi->shdn_ctrl.gpio);
+		aapi->shdn_ctrl.gpio = NULL;
+	}
+
+	orpal_aapi_free_status_line(aapi, &aapi->chrg_pg);
+	orpal_aapi_free_status_line(aapi, &aapi->chrg_s1);
+	orpal_aapi_free_status_line(aapi, &aapi->chrg_s2);
+	orpal_aapi_free_status_line(aapi, &aapi->low_bat);
+}
+
+static int orpal_aapi_setup_gpio(struct aapi_device *aapi)
+{
+	struct device *dev = aapi->dev.parent;
+	int ret;
+
+	/* shutdown control setup */
+	aapi->shdn_ctrl.gpio =
+		orpal_aapi_get_gpiod(aapi, "shutdown-ctrl", GPIOD_OUT_LOW);
+	if (IS_ERR(aapi->shdn_ctrl.gpio))
+		return PTR_ERR(aapi->shdn_ctrl.gpio);
+
+	aapi->shdn_ctrl.timeout = DEFAULT_SHDN_TIMEOUT_MS;
+	device_property_read_u32(dev, "shutdown-timeout-ms",
+				&aapi->shdn_ctrl.timeout);
+
+
+	/* set status line names */
+	strcpy(aapi->chrg_pg.name, "charger-pg");
+	strcpy(aapi->chrg_s1.name, "charger-stat1");
+	strcpy(aapi->chrg_s2.name, "charger-stat2");
+	strcpy(aapi->low_bat.name, "low-battery");
+
+
+	/* initialize status mutex */
+	mutex_init(&aapi->status_mutex);
+
+	/* charger indicators */
+	ret = orpal_aapi_init_status_line(aapi, &aapi->chrg_s1);
+	if (ret)
+		goto error_exit;
+
+	ret = orpal_aapi_init_status_line(aapi, &aapi->chrg_s2);
+	if (ret)
+		goto error_exit;
+
+	ret = orpal_aapi_init_status_line(aapi, &aapi->chrg_pg);
+	if (ret)
+		goto error_exit;
+
+	/* low battery indicator */
+	ret = orpal_aapi_init_status_line(aapi, &aapi->low_bat);
+	if (ret)
+		goto error_exit;
+
+	return 0;
+
+error_exit:
+	orpal_aapi_free_gpio(aapi);
+
+	return ret;
+}
