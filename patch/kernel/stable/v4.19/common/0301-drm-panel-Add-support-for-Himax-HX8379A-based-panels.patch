+static int hx8379a_panel_disable(struct drm_panel *panel)
+{
+	struct hx8379a_panel *hxp = panel_to_hxpanel(panel);
+	struct device *dev = &hxp->dsi->dev;
+	int ret;
+
+	if (!hxp->enabled)
+		return 0;
+
+	dev_dbg(dev, "panel disable\n");
+
+	backlight_disable(hxp->bldev);
+
+	ret = mipi_dsi_dcs_set_display_off(hxp->dsi);
+	if (ret < 0)
+		dev_err(dev,"faied to set display OFF: %d\n",ret);
+
+	hxp->enabled = false;
+
+	return 0;
+}
+
+static int hx8379a_panel_enable(struct drm_panel *panel)
+{
+	struct hx8379a_panel *hxp = panel_to_hxpanel(panel);
+	struct device *dev = &hxp->dsi->dev;
+	int ret;
+
+	if (hxp->enabled)
+		return 0;
+
+	dev_dbg(dev, "panel enable\n");
+
+	ret = mipi_dsi_dcs_set_display_on(hxp->dsi);
+	if (ret) {
+		dev_err(dev,"couldn't set display ON: %d\n", ret);
+		return ret;
+	}
+
+	ret = backlight_enable(hxp->bldev);
+	if (ret) {
+		dev_err(dev,"failed to enable backlight: %d\n",ret);
+		return ret;
+	}
+
+	hxp->enabled = true;
+
+	return 0;
+}
