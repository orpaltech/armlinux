+static int hx8379a_panel_unprepare(struct drm_panel *panel)
+{
+	struct hx8379a_panel *hxp = panel_to_hxpanel(panel);
+	struct device *dev = &hxp->dsi->dev;
+	int ret;
+
+	if (!hxp->prepared)
+		return 0;
+
+	dev_dbg(dev, "panel unprepare\n");
+
+	ret = mipi_dsi_dcs_enter_sleep_mode(hxp->dsi);
+	if (ret < 0)
+		dev_err(dev,"failed to enter sleep mode, ret = %d\n",ret);
+
+	/* wait for entering sleep mode*/
+	msleep(120);
+
+	hxp->prepared = false;
+
+	return 0;
+}
+
+static int hx8379a_panel_prepare(struct drm_panel *panel)
+{
+	struct hx8379a_panel *hxp = panel_to_hxpanel(panel);
+	struct device *dev = &hxp->dsi->dev;
+	int ret;
+
+	if (hxp->prepared)
+		return 0;
+
+	dev_dbg(dev, "panel prepare\n");
+
+	/* reset the panel*/
+	reset_control_reset(hxp->rstc);
+
+	/* pause after reset */
+	msleep(120);
+
+	if (hxp->desc->init_cmds) {
+		const struct hx8379a_init_cmd *cmds =
+					hxp->desc->init_cmds;
+		unsigned int i;
+
+		/* panel init sequence */
+		for (i = 0; cmds[i].len > 0; i++) {
+			const struct hx8379a_init_cmd *cmd = &cmds[i];
+
+			dev_dbg(dev, "panel write, len = %d\n", cmd->len);
+
+			ret = mipi_dsi_generic_write(hxp->dsi, cmd->data,
+						     cmd->len);
+		        if (ret < 0) {
+				dev_err(dev, "panel write failed: %d\n", ret);
+				return ret;
+			}
+
+			ret = mipi_dsi_dcs_nop(hxp->dsi);
+			if (ret < 0) {
+				dev_err(dev,
+					"failed to send DCS nop: %d\n", ret);
+				return ret;
+			}
+		}
+	}
+
+	ret = mipi_dsi_dcs_set_tear_on(hxp->dsi,
+				MIPI_DSI_DCS_TEAR_MODE_VBLANK);
+	if (ret)
+		return ret;
+
+	ret = mipi_dsi_dcs_exit_sleep_mode(hxp->dsi);
+	if (ret) {
+		dev_err(dev, "couldn't exit sleep mode: %d\n", ret);
+		return ret;
+	}
+
+	/* wait for exit sleep mode */
+	msleep(120);
+
+	hxp->prepared = true;
+
+	return 0;
+}
