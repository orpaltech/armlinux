+				backlight = <&pwm_bl>;
+
+				port {
+					lcd0_in: endpoint {
+						remote-endpoint = <&dsi1_out>;
+					};
+				};
+			};
+		};
+	};
+
+	fragment@1 {
+		target-path = "/soc/";
+		__overlay__ {
+			pwm_bl: backlight {
+				compatible = "pwm-backlight";
+				pwms = <&pwm 0 1000000>; /*1000Hz*/
+				brightness-levels = <0 32 64 96 128 160 192 224 256>;
+				default-brightness-level = <5>;
+			};
+		};
+	};
+
+	fragment@2 {
+		target = <&pwm>;
+		__overlay__ {
+			pinctrl-names = "default";
+			pinctrl-0 = <&pwm0_gpio12 &pwm1_gpio13>;
+			status = "okay";
+		};
+	};
