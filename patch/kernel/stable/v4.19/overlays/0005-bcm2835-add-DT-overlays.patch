+#include <dt-bindings/gpio/gpio.h>
+#include <dt-bindings/pinctrl/bcm2835.h>
+
+/dts-v1/;
+/plugin/;
+
+/ {
+	compatible = "brcm,bcm2837","brcm,bcm2835";
+
+	fragment@0 {
+		target-path = "/soc/";
+		__overlay__ {
+			aapi_vna {
+				compatible = "orpaltech,aapi-160";
+				clocks = <&aapi_clk 0>,
+					 <&aapi_clk 1>;
+				clock-names = "clk0",
+					      "clk1";
+				intermediate-freq = <10031>;
+				initial-freq = <3500000>;
+
+				shdn-ctrl-gpios = <&gpio 16 GPIO_ACTIVE_LOW>;
+				shdn-timeout-ms = <7000>;
+
+				low-battery-gpios = <&gpio 21 0>;
+				chrg-pg-gpios = <&gpio 4 0>;
+				chrg-stat1-gpios = <&gpio 6 0>;
+				chrg-stat2-gpios = <&gpio 5 0>;
+
+				status = "okay";
+			};
+
+			aapi_sound {
+				compatible = "orpaltech,aapi-sound";
+				cpu-node = <&i2s>;
+				codec-node = <&aapi_codec>;
+				status = "okay";
+			};
+
+			/* 27MHz reference crystal */
+			ref27: ref27M {
+				compatible = "fixed-clock";
+				#clock-cells = <0>;
+				clock-frequency = <27000000>;
+			};
+		};
+	};
+
+	fragment@1 {
+		target = <&i2s>;
+		__overlay__ {
+			status = "okay";
+		};
+	};
+
+	fragment@2 {
+		target = <&i2c1>;
