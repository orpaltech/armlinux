+	fdt set /${tmp_soc_path}/${tmp_spi_path} status "okay"
+	fdt set /${tmp_soc_path}/${tmp_spi_path}/nrf24 status "okay"
+
+	if test -n "${param_nrf24_max_freq}"; then
