+	fdt set /${tmp_soc_path}/${tmp_spi_path}/ertft status "okay"
+	fdt set /${tmp_soc_path}/${tmp_i2c_path} status "okay"
+	fdt set /${tmp_soc_path}/${tmp_i2c_path}/ertft_tp status "okay"
+
+	if test -n "${param_ertft_max_freq}"; then
