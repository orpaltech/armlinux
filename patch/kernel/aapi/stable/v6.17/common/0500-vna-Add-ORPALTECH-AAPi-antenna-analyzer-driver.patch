+	if (ret) {
+		dev_err(dev, "failed to request irq %d: %d\n", line->irq, ret);
+		line->irq = 0;
+		goto err_exit;
+	}
+
+	dev_dbg(dev, "%s: status line '%s' ready, num=%d, irq=%d\n",
+		__func__, line->name, desc_to_gpio(line->gpio), line->irq);
+
+	return 0;
+
+err_exit:
+	gpiod_put(line->gpio);
+	line->gpio = NULL;
+
+	return ret;
