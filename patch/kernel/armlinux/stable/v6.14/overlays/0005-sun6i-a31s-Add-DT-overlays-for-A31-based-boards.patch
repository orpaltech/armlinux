+		compatible = "bananapi,s070wv20-ct16";
+		enable-gpios = <&pio 6 4 GPIO_ACTIVE_HIGH>; /* LCD-PWR-EN: PG4 */
+		backlight = <&panel_bl>;
+
+		port {
+			#address-cells = <1>;
+			#size-cells = <0>;
+
+			panel_dpi_in: endpoint {
+				remote-endpoint = <&tcon0_out_lcd>;
+			};
+		};
+	};
+};
+
+&pwm0 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&pwm0_pin>;
+	status = "okay";
+};
+
