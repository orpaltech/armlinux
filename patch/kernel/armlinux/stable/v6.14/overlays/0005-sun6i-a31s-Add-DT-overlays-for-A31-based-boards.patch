+		reg = <0>;
+		remote-endpoint = <&panel_dpi_in>;
+		allwinner,tcon-channel = <0>;
+	};
+};
+
+&de {
+	status = "okay";
+};
+
+&hdmi {
+	status = "disabled";
+};
+
+&i2c1 {
+	#address-cells = <1>;
+        #size-cells = <0>;
+	status = "okay";
+
+	panel-ts@5d {
+		compatible = "goodix,gt928";
+		reg = <0x5d>;
+		interrupt-parent = <&pio>;
+		interrupts = <6 0 IRQ_TYPE_EDGE_FALLING>; /* PG0 */
