+/dts-v1/;
+/plugin/;
+
+/ {
+	compatible = "allwinner,sun6i-a31s";
+};
+
+&{/soc} {
+	panel_bl: backlight {
+		compatible = "pwm-backlight";
+		pwms = <&pwm0 0 50000 PWM_POLARITY_INVERTED>;
