 .../devices/linux-sun50i-fb-g++/qplatformdefs.h    | 40 ++++++++++++++++++++++
 2 files changed, 55 insertions(+)
 create mode 100644 mkspecs/devices/linux-sun50i-fb-g++/qmake.conf
 create mode 100644 mkspecs/devices/linux-sun50i-fb-g++/qplatformdefs.h

diff --git a/mkspecs/devices/linux-sun50i-fb-g++/qmake.conf b/mkspecs/devices/linux-sun50i-fb-g++/qmake.conf
new file mode 100644
index 0000000..7d65caa
--- /dev/null
+++ b/mkspecs/devices/linux-sun50i-fb-g++/qmake.conf
@@ -0,0 +1,15 @@
+# qmake configuration for the Allwinner A64 SoC
+
+include(../common/linux_device_pre.conf)
+
+QT_QPA_DEFAULT_PLATFORM	= linuxfb
+
+COMPILER_FLAGS          += -march=armv8-a -mtune=cortex-a53
+QMAKE_LIBS		+= -lrt -lpthread -ldl -lz
+
+DISTRO_OPTS             += deb-multi-arch
+DISTRO_OPTS		+= aarch64
+
+include(../common/linux_arm_device_post.conf)
+
+load(qt_config)
diff --git a/mkspecs/devices/linux-sun50i-fb-g++/qplatformdefs.h b/mkspecs/devices/linux-sun50i-fb-g++/qplatformdefs.h
